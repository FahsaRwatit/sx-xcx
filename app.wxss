view {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

page {
    width: 100%;
    height: 100%;
    /* background: #fee33e; */
    /* background: #9F0F0F; */
    background: url(https://qnres.fahsa.cn/xcx/shengxiao/pic/bg5.png) 0 0 repeat;
    position: relative;
    z-index: 1;
}

.mask {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0,0,0,0.6);
    z-index: -1;
    font-size: 0.24rpx;
    text-align: center;
    padding-top: 2rpx;
    color: #fff;
}

.bg {
    background-size: 50%;
    background-attachment: fixed;
    /* background-color: #fee33e; */
    /* background-color: #9F0F0F; */
    background-repeat: repeat;
}

.hideScroll {
    width: 100%;
    height: 100%;
    overflow: hidden;
}

.usermotto {
    margin-top: 20px;
    text-align: center;
}

.hide {
    display: none;
}

.show {
    display: block;
}

.noscroll {
    top: 0px;
    left: 0px;
    width: 100%;
    height: 100%;
    overflow: hidden;
    position: fixed;
    z-index: 0;
}

.btn-reset {
    border: none;
    background: none;
    padding: 0;
    line-height: normal;
}

.btn-reset:after {
    display: none;
}

.heart {
    animation: heartbeat 1s infinite;
}

@-webkit-keyframes heartbeat {
    0% {
        transform: rotate(0deg) scale(0.8,0.8);
        opacity: 1;
    }

    25% {
        transform: rotate(0deg) scale(1,1);
        opacity: 1;
    }

    100% {
        transform: rotate(0deg) scale(0.8,0.8);
        opacity: 1;
    }
}

@keyframes heartbeat {
    0% {
        transform: rotate(0deg) scale(0.8,0.8);
        opacity: 1;
    }

    25% {
        transform: rotate(0deg) scale(1,1);
        opacity: 1;
    }

    100% {
        transform: rotate(0deg) scale(0.8,0.8);
        opacity: 1;
    }
}