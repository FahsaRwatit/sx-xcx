.app {
    height: 100%;
}

#match {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: start;
}

.all {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.con {
    position: relative;
}

.banner {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
}

.banner Image {
    width: 100%;
    height: auto;
}

.bottom {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    flex: 1;
    flex-direction: column;
}

.button {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 160rpx;
}

.button .btn {
    width: 458rpx;
    height: 96rpx;
    color: #ffffff;
    font-size: 32rpx;
    border-radius: 96rpx;
    line-height: 96rpx;
    text-align: center;
    background-image: linear-gradient(90deg,rgb(249,49,114) 1%,rgb(252,112,80) 100%,rgb(249,49,114) 100%,rgb(254,111,80) 100%);
}

.button image {
    position: relative;
    width: 300rpx;
    height: 200rpx;
}

.button button {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.main {
    position: relative;
    display: flex;
    justify-content: space-between;
    padding: 210rpx 40rpx 0rpx;
}

.main ._left {
    width: 280rpx;
}

.main .con_img1 {
    width: 280rpx;
    height: 280rpx;
    padding: 20rpx;
    border-radius: 250rpx;
    background-color: rgba(255,255,255,.5);
}

.main .con_img2 {
    width: 240rpx;
    height: 240rpx;
    padding: 20rpx;
    border-radius: 250rpx;
    background-color: rgba(255,255,255,.8);
}

.main .con_img {
    position: relative;
    border-radius: 250rpx;
    background-color: #cccccc;
    display: flex;
    align-items: center;
}

.main .con_img image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 250rpx;
}

.main ._right {
    width: 280rpx;
}

.main .xz_name {
    margin-top: 30rpx;
    text-align: center;
    font-size: 0rpx;
    line-height: 50rpx;
}

.main .xz_name text {
    font-size: 36rpx;
    display: inline-block;
    vertical-align: middle;
}

.main .xz_name .gender {
    width: 40rpx;
    height: 40rpx;
    line-height: 40rpx;
    border-radius: 40rpx;
    background: #ffffff;
    display: inline-block;
    vertical-align: middle;
    margin-left: 12rpx;
}

.main .xz_name .gender image {
    width: 60%;
    height: 60%;
    display: inline-block;
    vertical-align: middle;
}

.main .nick_name {
    border-radius: 30rpx;
    line-height: 46rpx;
    background-color: #fff3a7;
    margin-top: 50rpx;
    text-align: center;
    font-size: 24rpx;
}

.main .middle {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 80rpx;
    height: 280rpx;
}

.main .middle .img_box {
    width: 80rpx;
    height: 80rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 100rpx;
    background-color: #ffffff;
}

.main .middle image {
    width: 50rpx;
    height: 50rpx;
}

.sel_box {
    text-align: center;
    padding-top: 50rpx;
}

.sel_box text {
    display: inline-block;
    text-align: center;
    border-radius: 40rpx;
    line-height: 70rpx;
    font-size: 28rpx;
    color: #ffffff;
    background-color: #4b86ff;
    width: auto;
    padding: 0 60rpx;
    margin: 0 auto;
}

.maskPop {
    position: fixed;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.6);
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: center;
    z-index: 6000;
}

.maskPop .title {
    width: 100%;
    font-size: 28rpx;
    line-height: 80rpx;
    text-align: center;
    background-color: #9F0F0F;
}

.selBox {
    width: 100%;
    margin: 0rpx auto;
    background: #fffdf4;
}

.selBox .ul {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    padding: 30rpx 20rpx 10rpx;
}

.selBox .ul .list_box {
    width: 25%;
    text-align: center;
    margin: 0rpx 0 0rpx;
    justify-content: space-between;
    padding: 0rpx 0rpx 20rpx;
    position: relative;
}

.selBox .ul .list_box .con_img {
    font-size: 0;
    padding: 0;
    width: 120rpx;
    height: 120rpx;
    margin: 8rpx auto;
    line-height: 120px;
    align-items: center;
    display: flex;
    justify-content: center;
    border-radius: 100px;
    background-size: 100% 100%;
    overflow: hidden;
}

.selBox .ul .list_box .con_img image {
    width: 120rpx;
    height: 120rpx;
    display: inline-block;
    vertical-align: middle;
}

.selBox .ul .list_box .text {
    font-size: 28rpx;
    text-align: center;
    color: #333333;
}

.selBox .ul .list_box .date {
    font-size: 22rpx;
    text-align: center;
    color: #ff6d87;
}

