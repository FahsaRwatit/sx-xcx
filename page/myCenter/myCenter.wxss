.app {
    height: 100%;
}

#myCenter {
    height: 100%;
    display: flex;
    flex-direction: column;
}

.c_list_box {
    padding: 0rpx 40rpx;
    margin-top: 30rpx;
    flex: 1;
    background-color: #ffffff;
}

.c_list_box .c_list {
    border-bottom: 1px solid #eee;
    margin-bottom: 10rpx;
}

.c_list_box .c_list .flex_box {
    display: flex;
    align-items: center;
    height: 100rpx;
}

.c_list_box .c_list .c_icon {
    width: 40rpx;
    height: 40rpx;
}

.c_list_box .c_list .c_arrow {
    width: 40rpx;
    height: 40rpx;
}

.c_list_box .c_list text,.c_list_box .c_list button {
    flex-grow: 1;
    text-align: center;
    flex: 1;
    font-size: 34rpx;
}

.c_list_box .c_list .reset_btn {
    background: none;
    border: none;
    box-shadow: none;
    padding: 0;
    line-height: 60rpx;
    text-align: left;
    padding-left: 20rpx;
}

.c_list_box .c_list .reset_btn::after {
    display: none;
}

.navigator-hover {
    background: none;
}

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    background: #9F0F0F;
    padding: 60rpx 0rpx 90rpx;
}

.userinfo-avatar {
    width: 188rpx;
    height: 188rpx;
    margin: 20rpx 20rpx 0rpx 20rpx;
    border-radius: 50%;
    background: #ffffff;
}

.userinfo-nickname {
    color: #333333;
    font-weight: bold;
    font-size: 38rpx;
    vertical-align: middle;
    line-height: 1.6;
    text-align: center;
    margin-top: 10rpx;
}

.userinfo-nickname text {
    display: inline-block;
    vertical-align: middle;
}

.user-gender {
    width: 40rpx;
    height: 40rpx;
    margin-left: 10rpx;
    display: inline-block;
    vertical-align: middle;
}

.userinfo button {
    background: none;
    border: 0;
    padding: 0;
    line-height: normal;
    overflow: visible;
    font-size: 0;
}

.userinfo button:after {
    display: none;
}

.userinfo .main {
    position: relative;
    overflow: visible;
}

.userinfo .imgBox {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
}

.userinfo image.headgear {
    position: absolute;
    width: 246rpx;
    height: 246rpx;
    top: -24rpx;
    left: 50%;
    margin-left: -123rpx;
}

.updataInfo {
    margin-top: 60rpx;
}

.updataInfo button {
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 20rpx;
    line-height: 42rpx;
    border-radius: 40rpx;
    font-weight: bold;
    width: 120rpx;
    border: 1px solid #333333;
    color: #333333;
}

.updataInfo button.active {
    background-color: #fff19e;
}

.updataInfo button image {
    display: inline-block;
    width: 100%;
    height: 100%;
}

@-webkit-keyframes rotation {
    from {
        -webkit-transform: rotate(0deg);
    }

    to {
        -webkit-transform: rotate(360deg);
    }
}

@keyframes rotation {
    from {
        -webkit-transform: rotate(0deg);
    }

    to {
        -webkit-transform: rotate(360deg);
    }
}

.rotation {
    transform: rotate(360deg);
    animation: rotation 3s linear infinite;
}