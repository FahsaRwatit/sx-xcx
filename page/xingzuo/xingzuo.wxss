.banner {
  width: 100%;
  min-height: 200rpx;
  overflow: hidden;
}

.top_banner {
  width: 100%;
  height: 200rpx;
}

.text {
  font-size: 30rpx;
  text-align: center;
  color: #333333;
}

.date {
  font-size: 22rpx;
  text-align: center;
  color: #ff6d87;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #ffffff;
}

.userinfo button {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: none;
  border: 0;
  padding: 0;
  line-height: normal;
}

.userinfo button:after {
  display: none;
}

.open-box {
  text-align: center;
}

.open {
  background: #fff3aa;
  color: #333;
  border: 0;
  box-shadow: none;
  font-size: 28rpx;
  display: inline-block;
  line-height: 2.2;
  border-radius: 10rpx;
}

.open:after {
  display: none;
}