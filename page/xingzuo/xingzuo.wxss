.app {
  height: 100%;
}

#index {
  padding-top: 0rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
}

#index .main {
  padding: 20rpx 40rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

#index .main .inner {
  width: 100%;
  margin: 0rpx auto;
  background: #fffdf4;
  border-radius: 8rpx;
  padding: 40rpx;
}

#index .main .ul {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

#index .main .ul .list_box {
  width: 25%;
  text-align: center;
  margin: 0rpx 0 0rpx;
  justify-content: space-between;
  padding: 0rpx 0rpx 40rpx;
  position: relative;
}

#index .main .ul .list_box .img_btn {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: block;
  background: none;
}

#index .main .ul .list_box .img_btn:after {
  display: none;
}

#index .main .ul .list_box .con_img {
  font-size: 0;
  padding: 0;
  width: 120rpx;
  height: 120rpx;
  margin: 8rpx auto;
  line-height: 120px;
  align-items: center;
  display: flex;
  justify-content: center;
  border-radius: 100px;
  background-size: 100% 100%;
  overflow: hidden;
}

#index .main .ul .list_box .con_img image {
  width: 120rpx;
  height: 120rpx;
  display: inline-block;
  vertical-align: middle;
}

